{
    // builtin configs
	"coc.preferences.extensionUpdateCheck": "weekly",
    "coc.preferences.formatOnSaveFiletypes": ["python"],
    // "diagnostic.displayByAle": true,
    "suggest.completionItemKindLabels": {
		"class"         : "",
		"color"         : "",
		"constant"      : "",
		"default"       : "",
		"enum"          : "",
		"enumMember"    : "",
		"event"         : "ﳅ",
		"field"         : "ﴲ",
		"file"          : "",
		"folder"        : "",
		"function"      : "",
		"interface"     : "",
		"keyword"       : "",
		"method"        : "",
		"module"        : "全",
		"operator"      : "",
		"property"      : "",
		"reference"     : "",
		"snippet"       : "",
		"struct"        : "פּ",
		"text"          : "",
		"typeParameter" : "",
		"unit"          : "",
		"value"         : "",
		"variable"      : ""
	},
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.hintSign": "",
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.format": "[%severity]%code: %message [%source]",
    "codeLens.enable": true,

    // coc-explorer
    "explorer.width": 30,
    "explorer.file.showHiddenFiles": false,
	"explorer.icon.enableNerdfont": true,
    "explorer.sources": [
        {
            "name": "bookmark",
            "expand": false
        },
        {
            "name": "buffer",
            "expand": false
        },
        {
            "name": "file",
            "expand": true
        }
    ],
    "explorer.file.column.indent.indentLine": true,
    "explorer.file.hiddenRules": {
        "extensions": [".git", "idea", "vim", "pytest_cache", "DS_Store", "vimspector.json"],
        "filenames": ["__pycache__", "pyrightconfig", "LICENSE"]
    },

    // coc-pyright
    "python.formatting.provider": "yapf",
    "python.formatting.yapfPath": "/Users/drizzle/opt/anaconda3/envs/research/bin/yapf",
    "python.formatting.yapfArgs": [
        "--style",
        "{spaces_before_comment: 1, column_limit: 120, split_before_named_assigns: False, split_all_comma_separated_values: False, split_arguments_when_comma_terminated: True, blank_line_before_nested_class_or_def: False}"
    ],
    "pyright.inlayHints.variableTypes": false,
    "pyright.inlayHints.functionReturnTypes": false,
    // coc-ruff
    // line length
    "ruff.enable": false,
    "ruff.args": ["--line-length", "120"],

    // snippets
    "snippets.ultisnips.directories": [
        "~/.config/nvim/UltiSnips"
    ],

    "suggest.noselect": true

}
